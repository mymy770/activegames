// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Branch {
  id          String   @id @default(cuid())
  name        String
  address     String
  timezone    String   @default("Asia/Jerusalem")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  settings    Settings?
  bookings    Booking[]
  bookingSlots BookingSlot[]
  
  @@map("branches")
}

model Settings {
  id                        String  @id @default(cuid())
  branchId                  String  @unique
  branch                    Branch  @relation(fields: [branchId], references: [id], onDelete: Cascade)
  
  maxConcurrentPlayers      Int     @default(80)
  slotMinutes               Int     @default(15)
  gameDurationMinutes       Int     @default(60)
  eventRoomDurationMinutes  Int     @default(120)
  eventGameDurationMinutes  Int     @default(60)
  bufferBeforeMinutes       Int     @default(30)
  bufferAfterMinutes        Int     @default(30)
  minEventParticipants      Int     @default(15)
  
  // Event room settings (for v1.1 - prévu mais pas utilisé maintenant)
  eventRoomId               String? // Nullable pour v1
  eventRoomCapacity         Int?    // Nullable pour v1
  
  createdAt                 DateTime @default(now())
  updatedAt                 DateTime @updatedAt
  
  @@map("settings")
}

model Booking {
  id                String        @id @default(cuid())
  branchId          String
  branch            Branch        @relation(fields: [branchId], references: [id])
  
  type              BookingType   @default(GAME)
  status            BookingStatus @default(CONFIRMED) // Direct CONFIRMED, pas de DRAFT
  
  startDateTime     DateTime      // ISO format, heure début réservation
  
  participantsCount Int
  
  // Customer info
  customerFirstName String
  customerLastName  String
  customerPhone     String
  customerEmail     String?       // Optionnel
  
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  
  // Relations
  bookingSlots      BookingSlot[]
  deposits          Deposit?      // Pour futur usage
  
  @@index([branchId, startDateTime])
  @@index([status])
  @@map("bookings")
}

enum BookingType {
  GAME
  EVENT
}

enum BookingStatus {
  CONFIRMED
  CANCELLED
}

model BookingSlot {
  id                String   @id @default(cuid())
  branchId          String
  branch            Branch   @relation(fields: [branchId], references: [id], onDelete: Cascade)
  
  bookingId         String
  booking           Booking  @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  
  slotStartDateTime DateTime // Heure de début du slot (15min)
  participantsCount Int      // Nombre de participants sur ce slot
  
  createdAt         DateTime @default(now())
  
  // On ne supprime pas les slots, on garde l'historique
  // La capacité se calcule uniquement sur les bookings CONFIRMED
  
  @@unique([branchId, slotStartDateTime, bookingId])
  @@index([branchId, slotStartDateTime])
  @@map("booking_slots")
}

// Structure pour dépôts (utilisation future)
model Deposit {
  id              String   @id @default(cuid())
  bookingId       String   @unique
  booking         Booking  @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  
  amount          Float?   // Montant du dépôt (futur)
  status          DepositStatus @default(PENDING)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@map("deposits")
}

enum DepositStatus {
  PENDING
  PAID
  REFUNDED
}
